<suite name="All Test Suite" parallel="classes" thread-count="4">

    <test verbose="2" preserve-order="true" name="nesineTest">

    <classes>
        <class name="com.nesine.TestRunner"></class>
    </classes>

    </test>
      <test name="FirefoxTest">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.nesine.Drivers" />
        </classes>
    </test>
    <test name="ChromeTest">
        <parameter name="browser" value= "chrome" />
        <classes>
            <class name="com.nesine.Drivers" />
        </classes>
    </test>
    <test name="OperaTest">
        <parameter name="browser" value= "opera" />
        <classes>
            <class name="com.nesine.Drivers" />
        </classes>
    </test>
</suite>